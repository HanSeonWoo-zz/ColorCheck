<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler1"
        android:layout_width="379dp"
        android:layout_height="584dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="24dp"
        android:text="날짜"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/history_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="시작시간"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/history_date"
        app:layout_constraintEnd_toStartOf="@+id/history_end"
        app:layout_constraintTop_toTopOf="@+id/history_date"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/history_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="끝시간"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/history_date"
        app:layout_constraintEnd_toStartOf="@+id/history_color"
        app:layout_constraintTop_toTopOf="@+id/history_date"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/history_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="컬러"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/history_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/history_date"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/history_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="추가하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler1" />



</androidx.constraintlayout.widget.ConstraintLayout>