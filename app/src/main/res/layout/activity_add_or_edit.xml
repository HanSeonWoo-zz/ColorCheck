<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOrEdit">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/AD_date"
        app:layout_constraintEnd_toStartOf="@+id/divider6"
        app:layout_constraintTop_toTopOf="@+id/AD_date"
        app:layout_constraintVertical_bias="0.44"
        />

    <EditText
        android:id="@+id/AD_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/AD_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AD_date" />

    <EditText
        android:id="@+id/AD_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AD_pink" />

    <EditText
        android:id="@+id/AD_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AD_orange" />

    <EditText
        android:id="@+id/AD_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AD_green" />

    <EditText
        android:id="@+id/AD_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AD_blue" />


    <Button
        android:id="@+id/AD_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorgreen"
        android:text="수정"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AD_purple" />

    <Button
        android:id="@+id/box_pink"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/colorpink"
        app:layout_constraintBottom_toBottomOf="@+id/AD_pink"
        app:layout_constraintEnd_toStartOf="@+id/divider6"
        app:layout_constraintTop_toTopOf="@+id/AD_pink" />

    <Button
        android:id="@+id/box_orange"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/colororange"
        app:layout_constraintBottom_toBottomOf="@+id/AD_orange"
        app:layout_constraintEnd_toStartOf="@+id/divider6"
        app:layout_constraintTop_toTopOf="@+id/AD_orange" />

    <Button
        android:id="@+id/box_green"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/colorgreen"
        app:layout_constraintBottom_toBottomOf="@+id/AD_green"
        app:layout_constraintEnd_toStartOf="@+id/divider6"
        app:layout_constraintTop_toTopOf="@+id/AD_green" />

    <Button
        android:id="@+id/box_blue"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/colorblue"
        app:layout_constraintBottom_toBottomOf="@+id/AD_blue"
        app:layout_constraintEnd_toStartOf="@+id/divider6"
        app:layout_constraintTop_toTopOf="@+id/AD_blue" />

    <Button
        android:id="@+id/box_purple"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/colorpurple"
        app:layout_constraintBottom_toBottomOf="@+id/AD_purple"
        app:layout_constraintEnd_toStartOf="@+id/divider6"
        app:layout_constraintTop_toTopOf="@+id/AD_purple" />

    <View
        android:id="@+id/divider6"
        android:layout_width="1dp"
        android:layout_height="783dp"
        android:layout_marginLeft="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>